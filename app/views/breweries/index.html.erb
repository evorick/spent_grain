<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Spent Grain Listing</h1>
  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Lbs Available</th>
          <th>Pickup Time</th>
          <th>Currently Available?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= brewery.address %></td>
            <td><%= brewery.email %></td>
            <td><%= brewery.lbs_available %></td>
            <td><%= brewery.pickup_times %></td>
            <td><%= brewery.currently_available.humanize %></td>
            <td><%= link_to 'Show', brewery %></td>
            <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
            <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Brewery', new_brewery_path, :class => "btn btn-info" %>
</div>
